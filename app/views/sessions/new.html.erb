<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<div class="field">
		<%= f.label :email, "Email:" %><br>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :password, "Password:" %><br>
		<%= f.password_field :password %>
	</div>

	<div class="actions">
		<%= f.submit "Log in" %>
	</div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
